{
  "name": "study-assistant",
  "displayName": "Study Assistant AI",
  "description": "Complete AI-powered study and code assistant",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["AI", "Education", "Other"],
  "keywords": ["ai", "study", "notes", "code-completion", "assistant"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  
  "contributes": {
    "configuration": {
      "title": "Study Assistant",
      "properties": {
        "studyAssistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API Key"
        },
        "studyAssistant.cppBackendUrl": {
          "type": "string",
          "default": "http://127.0.0.1:5000",
          "description": "C++ Backend URL (Code Intelligence)"
        },
        "studyAssistant.pythonBackendUrl": {
          "type": "string",
          "default": "http://127.0.0.1:5001",
          "description": "Python Backend URL (Study Features)"
        },
        "studyAssistant.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI code completion"
        },
        "studyAssistant.enableStudyHub": {
          "type": "boolean",
          "default": true,
          "description": "Enable Study Hub features"
        }
      }
    },
    
    "viewsContainers": {
      "activitybar": [
        {
          "id": "study-assistant-container",
          "title": "Study Assistant",
          "icon": "resources/brain-icon.svg"
        }
      ]
    },
    
    "views": {
      "study-assistant-container": [
        {
          "type": "webview",
          "id": "study-assistant-chat",
          "name": "Code Assistant",
          "icon": "resources/chat-icon.svg"
        },
        {
          "type": "webview",
          "id": "study-assistant-hub",
          "name": "Study Hub",
          "icon": "resources/book-icon.svg"
        },
        {
          "type": "webview",
          "id": "study-assistant-papers",
          "name": "Past Papers",
          "icon": "resources/paper-icon.svg"
        }
      ]
    },
    
    "commands": [
      {
        "command": "studyAssistant.registerProject",
        "title": "Register Project for Code Analysis",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.syncProject",
        "title": "Sync Project with Backend",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.createStudyProject",
        "title": "Create New Study Project",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.uploadPDF",
        "title": "Upload Study Material (PDF)",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.solvePaper",
        "title": "Analyze Past Paper",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.showMindmap",
        "title": "Show Project Mindmap",
        "category": "Study Assistant"
      },
      {
        "command": "studyAssistant.checkBackendStatus",
        "title": "Check Backend Status",
        "category": "Study Assistant"
      }
    ],
    
    "keybindings": [
      {
        "command": "studyAssistant.syncProject",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ]
  },
  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  }
}